CREATE DATABASE bd_velazquez;

USE bd_velazquez;

CREATE TABLE IF NOT EXISTS person (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(200),
    apellido VARCHAR(200),
    fecha_nacimiento DATE,
    puesto VARCHAR(200),
    sueldo DECIMAL(10, 2)
);

 CREATE USER 'conexion'@'localhost' IDENTIFIED BY 'conexion';

 GRANT SELECT, INSERT ON strongdm.* TO 'conexion'@'localhost';

 GRANT ALL ON *.* TO 'conexion'@'localhost' WITH GRANT OPTION;